<p class="text-success"><%= notice %></p>

<div class="container mt-4">
  <h1 class="text-center">Usuários</h1>

  <div class="mt-4 d-flex justify-content-between">
    <%= link_to "Novo Usuário", new_user_path, class: "btn btn-primary" %>
    <%= button_to "Logout", logout_path, method: :get, class: "btn btn-danger" %>
  </div>
  <div id="users" class="list-group mt-3">
    <% @users.each do |user| %>
      <div class="list-group-item">
        <%= render user %>
        <div class="text-right mt-2">
          <%= link_to "Mostrar este usuário", user, class: "btn btn-info btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
