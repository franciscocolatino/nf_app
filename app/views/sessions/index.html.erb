<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Login</h1>
      
      <%= form_with url: login_path, method: :post, authenticity_token: false, class: "mt-4" do |form| %>
        <div class="form-group">
          <%= form.label :username, "UsuÃ¡rio", class: "form-label" %>
          <%= form.text_field :username, required: true, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= form.label :password_digest, "Senha", class: "form-label" %>
          <%= form.password_field :password_digest, required: true, class: "form-control" %>
        </div>

        <div class="d-grid gap-2 mt-4">
          <%= form.submit "Login", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div id="error-message"></div>

      <div class="text-center mt-3">
        <%= link_to "Cadastrar", new_user_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>
